<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="#e8f4ff">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <Button
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:text="Find Lost Phone"
        android:id="@+id/findLostPhone"
        android:layout_alignTop="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/horizontalScrollView"
        android:layout_alignEnd="@+id/horizontalScrollView"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:text="My Settings"
        android:id="@+id/mySettings"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/findLostPhone"
        android:layout_alignEnd="@+id/findLostPhone"
        android:background="@drawable/buttonshape" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/action_logout"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonshape"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp" />

</LinearLayout>
